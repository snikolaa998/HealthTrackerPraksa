    <!--    </Transition>-->

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/fab_open_temperature_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="70dp"
            android:alpha="0"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:id="@+id/fab_open_blood_sugar_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="70dp"
            android:alpha="0"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:id="@+id/fab_open_blood_pressure_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="70dp"
            android:alpha="0"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:id="@+id/ll_back_sheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            motion:layout_constraintEnd_toEndOf="@+id/fab_open_temperature_dialog"
            motion:layout_constraintStart_toStartOf="@+id/fab_open_temperature_dialog"
            motion:layout_constraintTop_toBottomOf="@+id/fab_open_temperature_dialog" />
        <Constraint
            android:id="@+id/tv_temp_dialog_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="invisible"
            motion:layout_constraintEnd_toEndOf="@+id/fab_open_blood_sugar_dialog"
            motion:layout_constraintStart_toStartOf="@+id/fab_open_blood_sugar_dialog"
            motion:layout_constraintTop_toBottomOf="@+id/fab_open_blood_sugar_dialog" />
        <Constraint
            android:id="@+id/tv_blood_pressure_dialog_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            motion:layout_constraintEnd_toEndOf="@+id/fab_open_blood_sugar_dialog"
            motion:layout_constraintStart_toStartOf="@+id/fab_open_blood_sugar_dialog"
            motion:layout_constraintTop_toBottomOf="@+id/fab_open_blood_sugar_dialog" />
        <Constraint
            android:id="@+id/tv_blood_sugar_dialog_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            motion:layout_constraintEnd_toEndOf="@+id/fab_open_blood_sugar_dialog"
            motion:layout_constraintStart_toStartOf="@+id/fab_open_blood_sugar_dialog"
            motion:layout_constraintTop_toBottomOf="@+id/fab_open_blood_sugar_dialog" />
    </ConstraintSet>


    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:id="@+id/fab_open_temperature_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/bottom_navigation_menu"
            motion:layout_constraintEnd_toStartOf="@+id/fab_open_blood_sugar_dialog"
            motion:layout_constraintStart_toEndOf="@+id/fab_open_blood_pressure_dialog"
            motion:layout_constraintTop_toTopOf="@+id/nav_graph_host" />
        <Constraint
            android:id="@+id/fab_open_blood_sugar_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="88dp"
            android:layout_marginRight="88dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_chainStyle="packed"
            motion:layout_constraintTop_toBottomOf="@+id/fab_open_temperature_dialog" />
        <Constraint
            android:id="@+id/fab_open_blood_pressure_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="88dp"
            android:layout_marginLeft="88dp"
            motion:layout_constraintHorizontal_chainStyle="packed"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/fab_open_temperature_dialog" />
        <Constraint
            android:id="@+id/ll_back_sheet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/tv_temp_dialog_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            motion:layout_constraintEnd_toEndOf="@+id/fab_open_temperature_dialog"
            motion:layout_constraintStart_toStartOf="@+id/fab_open_temperature_dialog"
            motion:layout_constraintTop_toBottomOf="@+id/fab_open_temperature_dialog" />
        <Constraint
            android:id="@+id/tv_blood_pressure_dialog_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            motion:layout_constraintEnd_toEndOf="@+id/fab_open_blood_pressure_dialog"
            motion:layout_constraintStart_toStartOf="@+id/fab_open_blood_pressure_dialog"
            motion:layout_constraintTop_toBottomOf="@+id/fab_open_blood_pressure_dialog" />
        <Constraint
            android:id="@+id/tv_blood_sugar_dialog_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            motion:layout_constraintEnd_toEndOf="@+id/fab_open_blood_sugar_dialog"
            motion:layout_constraintStart_toStartOf="@+id/fab_open_blood_sugar_dialog"
            motion:layout_constraintTop_toBottomOf="@+id/fab_open_blood_sugar_dialog" />
    </ConstraintSet>

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@+id/start"
        motion:duration="150">
        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0.8"
                motion:framePosition="50"
                motion:motionTarget="@+id/fab_open_temperature_dialog" />
            <KeyAttribute
                android:alpha="0.8"
                motion:framePosition="50"
                motion:motionTarget="@+id/fab_open_blood_sugar_dialog" />
            <KeyAttribute
                android:alpha="0.8"
                motion:framePosition="50"
                motion:motionTarget="@+id/fab_open_blood_pressure_dialog" />
            <KeyAttribute
                android:alpha="0.8"
                motion:framePosition="50"
                motion:motionTarget="@+id/tv_blood_pressure_dialog_button" />
            <KeyAttribute
                android:alpha="0.8"
                motion:framePosition="50"
                motion:motionTarget="@+id/tv_blood_pressure_dialog_button" />
            <KeyAttribute
                android:alpha="0.8"
                motion:framePosition="50"
                motion:motionTarget="@+id/tv_temp_dialog_button" />
            <KeyAttribute
                android:alpha="0.8"
                motion:framePosition="50"
                motion:motionTarget="@+id/tv_blood_sugar_dialog_button" />
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="98"
                motion:motionTarget="@+id/ll_back_sheet" />
        </KeyFrameSet>
        
        <OnClick
            motion:clickAction="transitionToStart"
            motion:targetId="@id/ll_back_sheet" />
    </Transition>


</MotionScene>