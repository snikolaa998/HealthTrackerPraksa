<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.BloodPressureFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bloodPressureRecyclerView"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/canvasPressure"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp" />

    <TextView
        android:id="@+id/tvMaxValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="220"
        android:textSize="16sp"
        android:textColor="@color/colorPaint"
        android:layout_marginStart="13dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.example.healthtrackerpraksa.canvas.BloodPressureCanvas
        android:id="@+id/canvasPressure"
        app:layout_constraintTop_toBottomOf="@id/tvMaxValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>