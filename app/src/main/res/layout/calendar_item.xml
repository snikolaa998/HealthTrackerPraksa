<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_calendar_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="8dp"
        android:text="12"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"/>

    <ImageView
        android:id="@+id/iv_calendar_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tv_calendar_item"
        app:layout_constraintEnd_toEndOf="@id/tv_calendar_item"
        app:layout_constraintTop_toBottomOf="@id/tv_calendar_item"
        app:srcCompat="@drawable/blood_presure_small" />

</androidx.constraintlayout.widget.ConstraintLayout>