<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_value_sugar_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        android:text="Value: "/>

    <TextView
        android:id="@+id/tv_current_value_sugar_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_value_sugar_item"
        app:layout_constraintStart_toEndOf="@id/tv_value_sugar_item"
        android:text="120"
        android:layout_marginStart="16dp"
        android:textColor="#000"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_date_sugar_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date time: "
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tv_value_sugar_item"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/tv_current_date_sugar_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_date_sugar_item"
        app:layout_constraintStart_toEndOf="@id/tv_date_sugar_item"
        android:layout_marginStart="20dp"
        android:text="22/18/2019"
        android:textSize="18sp"
        android:textColor="#000"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_current_date_sugar_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#000"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>