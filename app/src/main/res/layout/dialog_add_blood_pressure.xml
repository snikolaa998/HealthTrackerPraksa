<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_dialog_add_blood_pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="22sp"
        android:textColor="#000"
        android:layout_marginTop="18dp"
        android:layout_marginStart="18dp"
        android:text="@string/add_blood_pressure"/>

    <TextView
        android:id="@+id/tv_current_value_blood_pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_dialog_add_blood_pressure"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="18dp"
        android:text="@string/current_value"
        android:textSize="14sp"
        android:textColor="#000"/>

    <EditText
        android:id="@+id/et_current_blood_pressure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_current_value_blood_pressure"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:inputType="text"/>

    <TextView
        android:id="@+id/tv_time_and_date_blood_pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_current_blood_pressure"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="18dp"
        android:text="@string/time_and_date"
        android:textSize="14sp"
        android:textColor="#000"/>

    <EditText
        android:id="@+id/et_time_blood_pressure"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_time_and_date_blood_pressure"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="18dp"
        android:layout_marginTop="8dp"/>
    
    <EditText
        android:id="@+id/et_date_blood_pressure"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_time_and_date_blood_pressure"
        app:layout_constraintStart_toEndOf="@id/et_time_blood_pressure"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/tv_note_blood_pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="18dp"
        app:layout_constraintTop_toBottomOf="@id/et_time_blood_pressure"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="14sp"
        android:textColor="#000"
        android:text="@string/note"/>

    <EditText
        android:id="@+id/et_note_blood_pressure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_note_blood_pressure"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_save_blood_pressure"
        android:layout_width="114dp"
        android:layout_height="54dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="18dp"
        android:padding="10dp"
        android:text="@string/save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_note_blood_pressure" />

    <Button
        android:id="@+id/btn_cancel_blood_pressure"
        android:layout_width="114dp"
        android:layout_height="54dp"
        app:layout_constraintTop_toTopOf="@id/btn_save_blood_pressure"
        app:layout_constraintEnd_toStartOf="@id/btn_save_blood_pressure"
        android:layout_marginEnd="15dp"
        android:text="Cancel"/>

</androidx.constraintlayout.widget.ConstraintLayout>