<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.CalendarFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linear_layout_date_year"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_previous_month"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textColor="@color/purple_700"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Previous" />

            <TextView
                android:id="@+id/tv_date_and_year_calendar"
                android:textAlignment="center"
                android:textColor="@color/purple_700"
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Januar 2020"/>

            <Button
                android:id="@+id/btn_next_month"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textColor="@color/purple_700"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Next" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_layout_days_calendar"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/linear_layout_date_year"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:textColor="@color/purple_700"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N"/>
            <TextView
                android:textColor="@color/purple_700"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P"/>
            <TextView
                android:textColor="@color/purple_700"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="U"/>
            <TextView
                android:textColor="@color/purple_700"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S"/>
            <TextView
                android:textColor="@color/purple_700"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C"/>
            <TextView
                android:textColor="@color/purple_700"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P"/>
            <TextView
                android:textColor="@color/purple_700"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewCalendar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/linear_layout_days_calendar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_fragment_calendar_temperature"/>

        <ImageView
            android:contentDescription="@string/app_name"
            android:id="@+id/iv_fragment_calendar_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/temperature_small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="100dp"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/tv_fragment_calendar_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/iv_fragment_calendar_temperature"
            app:layout_constraintBottom_toBottomOf="@id/iv_fragment_calendar_temperature"
            android:layout_marginStart="16dp"
            android:text="Temperature"/>

        <ImageView
            android:contentDescription="@string/app_name"
            android:id="@+id/iv_fragment_calendar_blood_pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/tv_fragment_calendar_temperature"
            app:layout_constraintStart_toEndOf="@id/tv_fragment_calendar_temperature"
            android:layout_marginStart="50dp"
            android:src="@drawable/blood_presure_small"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/blood_pressure"
            app:layout_constraintBottom_toBottomOf="@id/iv_fragment_calendar_blood_pressure"
            app:layout_constraintStart_toEndOf="@id/iv_fragment_calendar_blood_pressure"
            android:layout_marginStart="16dp"/>

        <ImageView
            android:id="@+id/iv_fragment_calendar_sugar_in_blood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/iv_fragment_calendar_temperature"
            app:layout_constraintEnd_toEndOf="@id/iv_fragment_calendar_temperature"
            app:layout_constraintTop_toBottomOf="@id/iv_fragment_calendar_temperature"
            android:src="@drawable/blood_sugar_small"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_fragment_calendar_sugar_blood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/iv_fragment_calendar_sugar_in_blood"
            app:layout_constraintStart_toEndOf="@id/iv_fragment_calendar_sugar_in_blood"
            android:text="@string/sugar_in_blood"
            android:layout_marginStart="16dp
"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>