<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_upper_value_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="16dp"
        android:text="Values(min/max): " />

    <TextView
        android:id="@+id/tv_upper_item_blood_pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="130"
        app:layout_constraintTop_toTopOf="@id/tv_lower_item_blood_pressure"
        app:layout_constraintStart_toEndOf="@id/tv_lower_item_blood_pressure"

        android:layout_marginStart="16dp"
        android:textSize="18sp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/tv_lower_item_blood_pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="80"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/tv_upper_value_item"
        app:layout_constraintStart_toEndOf="@id/tv_upper_value_item"
        android:textSize="18sp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/tv_date_value_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_upper_value_item"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Date time: " />
    <TextView
        android:id="@+id/tv_date_item_blood_pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22/18 2019"
        app:layout_constraintTop_toTopOf="@id/tv_date_value_item"
        app:layout_constraintStart_toEndOf="@id/tv_date_value_item"
        android:layout_marginStart="20dp"
        android:textSize="18sp"
        android:textColor="#000"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:background="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_date_value_item" />
</androidx.constraintlayout.widget.ConstraintLayout>